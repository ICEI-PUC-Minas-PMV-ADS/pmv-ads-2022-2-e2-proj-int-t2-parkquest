@model Dominio.Entidades.Estacionamento

@{
    ViewData["Title"] = "Create";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Anuncie seu empreendimento</h2>
                <ol>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Anuncie seu empreendimento</li>
                </ol>
            </div>

        </div>
    </div><!-- End Breadcrumbs -->

    <section class="sample-page">
        <div class="container" data-aos="fade-up">
            <section id="reserva" class="book-a-table">
                <div class="container" data-aos="fade-up">
                    <div class="section-header">
                        <p><span>Anuncie Seu Empreendimento</span></p>
                    </div>
                    <div class="row g-0">

                        <div class="col-lg-6 reservation-img d-flex flex-column justify-content-center" data-aos="zoom-out" data-aos-delay="200">
                            <img src="~/img/estacionamento.jpg" alt="sobre" style="width: 100%" />
                        </div>

                        <div class="col-lg-6 d-flex align-items-center reservation-form-bg justify-content-center">
                            <form asp-action="Create">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="nome" class="form-control" placeholder="Nome do Estabelecimento" />
                                    <span asp-validation-for="nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="endereco" class="form-control"  placeholder="Endereço" />
                                    <span asp-validation-for="endereco" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="cidade" class="form-control"  placeholder="Cidade" />
                                    <span asp-validation-for="cidade" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="vagas" class="form-control"  placeholder="Quantidade de Vagas" />
                                    <span asp-validation-for="vagas" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="email" class="form-control"  placeholder="E-mail" />
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="cnpj" class="form-control"  placeholder="CNPJ" />
                                    <span asp-validation-for="cnpj" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="valor" class="form-control"  placeholder="Valor por Hora" />
                                    <span asp-validation-for="valor" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="senha" class="form-control"  placeholder="Senha" />
                                    <span asp-validation-for="senha" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" style="background-color: #ce1212; border-color: #ce1212; width: 100%;" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</main>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Vendor JS Files -->
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/aos/aos.js"></script>
<script src="~/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
<script src="~/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="~/js/main.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
