@{
    ViewData["Title"] = "Home Page";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="hero d-flex align-items-center section-bg">
    <div class="container">
        <div class="row justify-content-between gy-5">
            <div class="col-lg-5 order-2 order-lg-1 d-flex flex-column justify-content-center align-items-center text-center">
                <h2 data-aos="fade-up">Estacione Aqui!</h2>
                <p data-aos="fade-up" data-aos-delay="100">Os melhores preços da região.</p>
                <div class="d-flex" data-aos="fade-up" data-aos-delay="200">
                    <a asp-area="" asp-controller="Reserve" asp-action="Create" class="btn-book-a-table">Reservar</a>
                    <!--  <a href="https://www.youtube.com/watch?v=LXb3EKWsInQ" class="glightbox btn-watch-video d-flex align-items-center"><i class="bi bi-play-circle"></i><span>Watch Video</span></a>-->
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 text-center text-lg-start">
                <img src="assets/img/estacionamento.jpg" class="img-fluid" alt="" data-aos="zoom-out" data-aos-delay="300">
            </div>
        </div>
    </div>
</section><!-- End Hero Section -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2>Sobre</h2>
                <p>Saiba mais <span>sobre nós</span></p>
            </div>

            <div class="col-md-12 reservation-img justify-content-center" data-aos="zoom-out" data-aos-delay="200">
                <img src="~/img/autoamg.jpg" alt="sobre" style="width: 100%; height: 100%; vertical-align: bottom" >
            </div>

            <div class="row gy-4">
                <div class="col-lg-7 position-relative about-img" style="background-image: url(assets/img/sobre.jpg) ;" data-aos="fade-up" data-aos-delay="150">
                    <div class="call-us position-absolute">
                        <h4>Reserve uma vaga</h4>
                        <p>ParkQuest.com</p>
                    </div>
                </div>
                <div class="col-lg-5 d-flex align-items-end" data-aos="fade-up" data-aos-delay="300">
                    <div class="content ps-0 ps-lg-5">
                        <p class="fst-italic">
                            A ParkQuest.com oferece vagas de estacionamento nos melhores pontos do Brasil.
                        </p>
                        <ul>
                            <li><i class="bi bi-check2-all"></i> Reservas diretamente pelo site</li>
                            <li><i class="bi bi-check2-all"></i> Vagas em aeroportos, shoppings, estádios e muito mais</li>
                            <li><i class="bi bi-check2-all"></i> Preços que cabem no seu bolso</li>
                        </ul>
