@model Dominio.Entidades.Reserve

@{
    ViewData["Title"] = "Create";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Reserva</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Reserva</li>
                </ol>
            </div>

        </div>
    </div><!-- End Breadcrumbs -->

    <section class="sample-page">
        <div class="container" data-aos="fade-up">

            <div class="mb-3">
                <h3 id="nome_estabelecimento">@Html.DisplayFor(model => model.Estacionamento.nome)</h3>
                <h4 id="endereco_estabelecimento">@Html.DisplayFor(model => model.Estacionamento.endereco)</h4>
            </div>
            <div class="container">
                <div class="row gy-3">
                    <div class="col-12 col-md-6">
                        <div id="my_carousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100"
                                         src="https://images.unsplash.com/photo-1506521781263-d8422e82f27a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
                                         alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100"
                                         src="https://images.unsplash.com/photo-1616363088386-31c4a8414858?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
                                         alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100"
                                         src="https://images.unsplash.com/photo-1526626607369-f89fe1ed77a9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
                                         alt="Third slide">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#my_carousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#my_carousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-6  reservation-form-bg">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="dataEntrada" class="control-label"></label>
                                <input asp-for="dataEntrada" class="form-control" type="date" />
                                <span asp-validation-for="dataEntrada" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="horarioEntrada" class="control-label"></label>
                                <input asp-for="horarioEntrada" class="form-control" type="time" />
                                <span asp-validation-for="horarioEntrada" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dataSaida" class="control-label"></label>
                                <input asp-for="dataSaida" class="form-control" type="date">
                                <span asp-validation-for="dataSaida" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="horarioSaida" class="control-label"></label>
                                <input asp-for="horarioSaida" class="form-control" type="time" />
                                <span asp-validation-for="horarioSaida" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="custoDia" class="control-label"></label>
                                <input asp-for="custoDia" class="form-control" />
                                <span asp-validation-for="custoDia" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="custoTotal" class="control-label"></label>
                                <input asp-for="custoTotal" class="form-control" />
                                <span asp-validation-for="custoTotal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <!-- <label asp-for="EstacionamentoID" class="control-label"></label>-->
                                <select asp-for="EstacionamentoID" class="form-control" asp-items="ViewBag.EstacionamentoID"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Reservar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <!--
                <div class="mt-3 mb-3">
                    <iframe style="border:0; width: 100%; height: 350px;"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3757.840888991449!2d-43.967584684891285!3d-19.634098986770148!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xa6631c0e742453%3A0x9cb0e3528a7a1983!2sAeroporto%20Internacional%20de%20Confins%20-%20Tancredo%20Neves!5e0!3m2!1spt-BR!2sbg!4v1666145472084!5m2!1spt-BR!2sbg"
                            width="600" height="450" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade" frameborder="0" allowfullscreen></iframe>
                </div>

                -->



            </div>
    </section>

</main><!-- End #main -->


<div>
    <a asp-action="Index">Back to List</a>
</div>


